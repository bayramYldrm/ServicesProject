{% block body %}
    <div class="container mt-5">
        <div class="card">
            <div class="header">
                <h3>Show Service</h3>
            </div>
            <div class="body">
                <table class="table table-bordered table-hover">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ service.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ service.Name }}</td>
                    </tr>
                    <tr>
                        <th>Version</th>
                        <td>{{ service.Version }}</td>
                    </tr>
                    <tr>
                        <th>ServiceName</th>
                        <td>{{ service.ServiceName }}</td>
                    </tr>
                    <tr>
                        <th>Category</th>
                        <td>{{ service.Category }}</td>
                    </tr>
                    <tr>
                        <th>IsActive</th>
                        <td>
                                <span class="badge {{ service.IsActive ? 'bg-success' : 'bg-danger' }}">
                                    {{ service.IsActive ? 'Active' : 'Inactive' }}
                                </span>
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
            <div class="footer">
                <div class="left-buttons">
                    <a href="{{ path('app_service_index') }}" class="btn btn-secondary btn-sm">
                        <span class="fas fa-arrow-left"></span> Back to list
                    </a>
                    <a href="{{ path('app_service_edit', {'id': service.id}) }}" class="btn btn-primary btn-sm">
                        <span class="fas fa-edit"></span> Edit
                    </a>
                </div>
                <div class="right-buttons">
                    {{ include('service/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

<style>
    body {
        background-color: #f4f9fc;
        color: #333;
        font-family: 'Source Sans Pro', sans-serif;
    }

    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
    }

    .card {
        width: 500px;
        background-color: #ffffff;
        border-radius: 10px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .header {
        background-image: linear-gradient(to right, #007bff, #0056b3);
        color: #ffffff;
        padding: 15px;
        text-align: center;
        border-bottom: 2px solid #0056b3;
    }

    .header h3 {
        font-size: 22px;
        margin: 0;
    }

    .body {
        padding: 15px;
        background-color: #f9f9f9;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        background-color: #ffffff;
    }

    .table th, .table td {
        padding: 12px;
        text-align: left;
    }

    .table th {
        background-color: #007bff;
        color: #ffffff;
        border: 1px solid #0056b3;
    }

    .table td {
        border: 1px solid #dddddd;
    }

    .badge {
        display: inline-block;
        padding: 5px 10px;
        font-size: 12px;
        font-weight: 600;
        text-align: center;
        border-radius: 12px;
        color: #ffffff;
    }

    .bg-success {
        background-color: #28a745;
    }

    .bg-danger {
        background-color: #dc3545;
    }

    .footer {
        background-color: #f9f9f9;
        padding: 15px;
        border-top: 1px solid #ddd;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .left-buttons, .right-buttons {
        display: flex;
        gap: 10px;
    }

    .btn {
        display: inline-flex;
        align-items: center;
        font-size: 12px;
        font-weight: 600;
        border-radius: 4px;
        text-decoration: none;
        cursor: pointer;
        transition: background-color .3s ease, border-color .3s ease;
        box-sizing: border-box;
    }

    .btn-sm {
        padding: 4px 10px; /* Küçültülmüş padding */
        font-size: 12px;
        line-height: 1.5;
    }

    .btn-primary, .btn-secondary, .btn-danger {
        border: 1px solid transparent;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        color: #ffffff;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #0056b3;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
        color: #ffffff;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
        border-color: #545b62;
    }

    .btn-danger {
        background-color: #e74c3c; /* Modern kırmızı tonu */
        border-color: #c0392b; /* Koyu kırmızı */
        color: #ffffff;
        padding: 4px 10px; /* Küçültülmüş padding */
        font-size: 12px; /* Küçültülmüş font boyutu */
        line-height: 1.5; /* Buton yüksekliğini düzgün tutmak için */
    }

    .btn-danger:hover {
        background-color: #c0392b;
        border-color: #e74c3c;
    }
</style>
