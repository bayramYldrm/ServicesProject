{% extends 'base.html.twig' %}

{% block title %}New Service{% endblock %}

{% block body %}
    <div class="d-flex align-items-center justify-content-center min-vh-100">
        <div class="card">
            <div class="header">
                <h3>Create New Service</h3>
            </div>
            <div class="body">
                {{ include('service/_form.html.twig') }}
            </div>
            <div class="footer">
                <ul>
                    <li>
                        <a href="{{ path('app_service_index') }}" class="btn btn-secondary">
                            <span class="fas fa-arrow-left"></span> Back to list
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <style>
        body {
            background-color: #f4f9fc;
            color: #333;
            margin: 0;
            padding: 0;
            font-family: 'Source Sans Pro', sans-serif;
        }

        .d-flex {
            display: flex;
        }

        .align-items-center {
            align-items: center;
        }

        .justify-content-center {
            justify-content: center;
        }

        .min-vh-100 {
            min-height: 100vh;
        }

        .card {
            width: 400px;
            background-color: #ffffff;
            color: #000000;
            margin: 20px;
            border-radius: 10px;
            box-shadow: 0 6px 12px 0 rgba(0, 0, 0, 0.1);
            overflow: hidden;
            padding: 0;
            box-sizing: border-box;
        }

        .header {
            height: 80px;
            width: 100%;
            background-image: linear-gradient(to right, #007bff, #0056b3);
            border-bottom: 5px solid #0056b3;
            padding: 10px;
            box-sizing: border-box;
            color: #ffffff;
            text-align: center;
        }

        .header h3 {
            color: #ffffff;
            font-size: 24px;
            font-weight: 600;
            margin: 5px 0;
        }

        .body {
            padding: 15px;
            background-color: #f9f9f9;
            color: #000000;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-group label {
            display: block;
            margin-bottom: 5px;
            font-weight: 600;
        }

        .form-group .form-control {
            background-color: #ffffff;
            color: #000000;
            border: 1px solid #ccc;
            border-radius: 4px;
            padding: 8px;
            box-sizing: border-box;
        }

        .input-group {
            display: flex;
            align-items: center;
        }

        .input-group-text {
            background-color: transparent;
            border: none;
            cursor: pointer;
            padding: 0 10px;
        }

        .btn-primary {
            background-color: #007bff;
            border: 1px solid #007bff;
            color: #ffffff;
            border-radius: 4px;
            padding: 8px 15px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: background-color .3s ease, border-color .3s ease;
            display: inline-block;
            text-align: center;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

        .btn-secondary {
            background-color: #6c757d;
            border: 1px solid #6c757d;
            color: #ffffff !important;
            border-radius: 4px;
            padding: 8px 15px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: background-color .3s ease, border-color .3s ease;
            display: inline-block;
            text-align: center;
        }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
            color: #ffffff; /* Hover durumunda da beyaz yazÄ± */
        }

        .footer {
            background-color: #ffffff;
            border-top: 1px solid #ccc;
            padding: 10px;
            box-sizing: border-box;
            color: #000000;
            text-align: center;
            margin-top: 20px;
        }

        .footer ul {
            display: flex;
            justify-content: center;
            padding: 0;
            margin: 0;
            list-style: none;
        }

        .footer ul li {
            margin: 0 10px;
        }

        .footer ul li a {
            color: #007bff;
            text-decoration: none;
        }

        .footer ul li a:hover {
            text-decoration: underline;
        }

        .form-group button[type="submit"] {
            display: none;
        }
    </style>
{% endblock %}
