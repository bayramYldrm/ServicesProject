{% extends 'base.panel.html.twig' %}

{% block title %}Service index{% endblock %}

{% block body %}
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Services</h1>
                </div>
            </div>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card card-dark">
                        <div class="card-header">
                            <h3 class="card-title">Service List</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="servicesTable" class="table table-dark table-bordered table-hover">
                                <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>Version</th>
                                    <th>ServiceName</th>
                                    <th>Category</th>
                                    <th>IsActive</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for service in services %}
                                    <tr>
                                        <td>{{ service.id }}</td>
                                        <td>{{ service.Name }}</td>
                                        <td>{{ service.Version }}</td>
                                        <td>{{ service.ServiceName }}</td>
                                        <td>{{ service.Category }}</td>
                                        <td class="text-center">
                                            <div class="custom-control custom-switch">
                                                <input type="checkbox" class="custom-control-input" id="serviceSwitch{{ service.id }}" disabled
                                                        {% if service.IsActive %} checked {% endif %}>
                                                <label class="custom-control-label" for="serviceSwitch{{ service.id }}"></label>
                                            </div>
                                        </td>
                                        <td class="text-center">
                                            <a href="{{ path('app_service_show', {'id': service.id}) }}" class="btn btn-info btn-sm">
                                                <i class="fas fa-eye"></i> Show
                                            </a>
                                            <a href="{{ path('app_service_edit', {'id': service.id}) }}" class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i> Edit
                                            </a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="7" class="text-center">No records found</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
            </div>
        </div>
    </section>

    <div class="row mt-3">
        <div class="col-12 text-right">
            <a href="{{ path('app_service_new') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i> Create new
            </a>
        </div>
    </div>
{% endblock %}
