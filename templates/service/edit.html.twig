{% block body %}
    <div class="container mt-5">
        <div class="card">
            <div class="header">
                <h3>Edit Service</h3>
            </div>
            <div class="body">
                {{ form_start(form) }}

                <div class="form-group">
                    {{ form_row(form.Name) }}
                </div>

                <div class="form-group">
                    {{ form_row(form.Version) }}
                </div>

                <div class="form-group">
                    {{ form_row(form.ServiceName) }}
                </div>

                <div class="form-group">
                    {{ form_row(form.Category) }}
                </div>

                <div class="form-group">
                    <br>
                    <div class="form-check">
                        {{ form_widget(form.IsActive, {'attr': {'class': 'form-check-input'}}) }}
                        {{ form_label(form.IsActive, null, {'label_attr': {'class': 'form-check-label'}}) }}
                        {{ form_errors(form.IsActive) }}
                    </div>
                </div>

                <button class="btn btn-primary">{{ button_label|default('Save') }}</button>

                {{ form_end(form) }}
            </div>
            <div class="footer">
                <div class="footer-buttons">
                    <a href="{{ path('app_service_index') }}" class="btn btn-secondary">
                        <span class="fas fa-arrow-left"></span> Back to list
                    </a>
                    {{ include('service/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}


<style>
    body {
        background-color: #f4f9fc;
        color: #333;
        margin: 0;
        padding: 0;
        font-family: 'Source Sans Pro', sans-serif;
    }

    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
    }

    .card {
        width: 400px;
        background-color: #ffffff;
        color: #000000;
        border-radius: 10px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .header {
        height: 80px;
        width: 100%;
        background-image: linear-gradient(to right, #007bff, #0056b3);
        border-bottom: 5px solid #0056b3;
        padding: 10px;
        box-sizing: border-box;
        color: #ffffff;
        text-align: center;
    }

    .header h3 {
        color: #ffffff;
        font-size: 24px;
        font-weight: 600;
        margin: 5px 0;
    }

    .body {
        padding: 15px;
        background-color: #f9f9f9;
        color: #000000;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-group label {
        display: block;
        font-weight: bold;
        margin-bottom: 5px;
    }

    .form-group input,
    .form-group select,
    .form-group textarea {
        width: 100%;
        background-color: #ffffff;
        color: #000000;
        border: 1px solid #ccc;
        border-radius: 4px;
        padding: 8px;
        box-sizing: border-box;
    }

    .form-check-input {
        margin-right: 10px;
        vertical-align: middle;
    }

    .form-check-label {
        font-weight: normal;
        vertical-align: middle;
    }


    .footer {
        padding: 10px;
        background-color: #f9f9f9;
        border-top: 1px solid #ddd;
    }

    .footer-buttons {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .footer-buttons .btn-secondary {
        margin-right: auto;
    }

    .btn-primary {
        background-color: #007bff;
        border: 1px solid #007bff;
        color: #ffffff;
        border-radius: 4px;
        padding: 8px 15px;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        transition: background-color .3s ease, border-color .3s ease;
        display: inline-block;
        text-align: center;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #0056b3;
    }

    .btn-secondary {
        background-color: #6c757d;
        border: 1px solid #6c757d;
        color: #ffffff;
        border-radius: 4px;
        padding: 8px 15px;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        transition: background-color .3s ease, border-color .3s ease;
        display: inline-block;
        text-align: center;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
        border-color: #545b62;
    }

    .btn-danger {
        background-color: #dc3545;
        border: 1px solid #dc3545;
        color: #ffffff;
        border-radius: 4px;
        padding: 10px 20px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: background-color 0.3s ease, border-color 0.3s ease, box-shadow 0.3s ease;
        display: inline-block;
        text-align: center;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .btn-danger:hover {
        background-color: #c82333;
        border-color: #bd2130;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
    }

    .btn-danger:focus,
    .btn-danger:active {
        outline: none;
        box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.5);
    }

    .form-group button[type="submit"] {
        display: none;
    }
</style>
