{% extends 'base.panel.html.twig' %}

{% block title %}Tasks List{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="toolbar mb-3">
            <div class="d-flex justify-content-between align-items-center">
                <h1>Tasks List</h1>
                <a href="{{ path('app_task_new') }}" class="btn btn-success">
                    <i class="fas fa-plus"></i> Create New Task
                </a>
            </div>
        </div>

        <div class="card card-dark">
            <div class="card-header">
                <h3 class="card-title">Tasks List Table</h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="servicesTable" class="table table-dark table-bordered table-hover">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Status</th>
                            <th>Priority</th>
                            <th>Created At</th>
                            <th>Updated At</th>
                            <th>File Path</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for task in tasks %}
                            <tr>
                                <td>{{ task.id }}</td>
                                <td>{{ task.title }}</td>
                                <td>{{ task.description }}</td>
                                <td>{{ task.status }}</td>
                                <td>{{ task.priority }}</td>
                                <td>{{ task.createdAt ? task.createdAt|date('Y-m-d H:i:s') : 'N/A' }}</td>
                                <td>{{ task.updatedAt ? task.updatedAt|date('Y-m-d H:i:s') : 'N/A' }}</td>
                                <td>{{ task.filePath ? task.filePath : 'N/A' }}</td>
                                <td>
                                    <a href="{{ path('app_task_show', {'id': task.id}) }}" class="btn btn-info btn-sm">
                                        <i class="fas fa-eye"></i> Show
                                    </a>
                                    <a href="{{ path('app_task_edit', {'id': task.id}) }}" class="btn btn-warning btn-sm">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="9" class="text-center">No records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
