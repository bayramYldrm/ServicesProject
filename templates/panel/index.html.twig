{% extends 'base.panel.html.twig' %}

{% block title %}Home{% endblock %}

{% block breadcrumb %}
    {{ include('panel/breadcrumbs.html.twig') }}
{% endblock %}

{% block body %}
    <!-- Default box -->
    <div class="card card-primary" id="welcome-card">
        <div class="card-header">
            <h3 class="card-title">Welcome!</h3>
            <button type="button" class="close" data-dismiss="card" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="card-body">
            You can perform operations from the menu on the left.
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            <span id="countdown-timer">This card will close in 15 seconds.</span>
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            var countdownElement = document.getElementById('countdown-timer');
            var countdown = 15;

            // Update the countdown every second
            var countdownInterval = setInterval(function() {
                countdown--;
                countdownElement.textContent = 'This card will close in ' + countdown + ' seconds.';

                if (countdown <= 0) {
                    clearInterval(countdownInterval);
                    document.getElementById('welcome-card').style.display = 'none';
                }
            }, 1000);

            // Close the card when the close button is clicked
            document.querySelector('.close[data-dismiss="card"]').addEventListener('click', function() {
                clearInterval(countdownInterval);
                document.getElementById('welcome-card').style.display = 'none';
            });
        });
    </script>
{% endblock %}
