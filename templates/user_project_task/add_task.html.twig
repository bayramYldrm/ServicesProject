{% block body %}
    <div class="container d-flex align-items-center justify-content-center min-vh-100">
        <div class="card">
            <div class="header">
                <h3>Add Task to Project: {{ project.projectName }}</h3>
            </div>
            <div class="body">
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.task) }}
                    {{ form_widget(form.task, {'attr': {'class': 'form-control form-control-lg'}}) }}
                </div>
                <div class="form-group">
                    {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                </div>
                {{ form_end(form) }}
            </div>
            <div class="footer">
                <ul>
                    <li>
                        <a href="{{ path('user_project_task_list', { projectId: project.id }) }}" class="btn btn-secondary">
                            <span class="fas fa-arrow-left"></span> Back to Task List
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}

