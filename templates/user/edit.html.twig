{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
    <div class="d-flex align-items-center justify-content-center min-vh-100">
        <div class="container mt-5">
            <div class="card">
                <div class="header">
                    <h3>Edit User</h3>
                </div>
                <div class="body">
                    {{ form_start(form) }}
                    <div class="form-group">
                        {{ form_label(form.Username, 'Username') }}
                        <div class="input-group">
                            {{ form_widget(form.Username, { 'attr': { 'class': 'form-control', 'placeholder': 'Username' } }) }}
                            <span class="input-group-text">
                                <i class="bi bi-person"></i>
                            </span>
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.Email, 'Email') }}
                        <div class="input-group">
                            {{ form_widget(form.Email, { 'attr': { 'class': 'form-control', 'placeholder': 'Email' } }) }}
                            <span class="input-group-text">
                                <i class="bi bi-envelope"></i>
                            </span>
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.Password, 'Password') }}
                        <div class="input-group">
                            {{ form_widget(form.Password, { 'attr': { 'class': 'form-control', 'placeholder': 'Password', 'id': 'inputPassword', 'data-toggle': 'password' } }) }}
                            <span class="input-group-text" id="togglePassword">
                                <i class="bi bi-eye" data-show="false"></i>
                            </span>
                        </div>
                    </div>

                    <button class="btn btn-primary">{{ button_label|default('Update') }}</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css">
    <style>
        body {
            background-color: #f4f9fc;
            color: #333;
            margin: 0;
            padding: 0;
            font-family: 'Source Sans Pro', sans-serif;
        }

        .d-flex {
            display: flex;
        }

        .align-items-center {
            align-items: center;
        }

        .justify-content-center {
            justify-content: center;
        }

        .min-vh-100 {
            min-height: 100vh;
        }

        .container {
            margin: 0;
            width: 100%;
        }

        .card {
            width: 400px;
            background-color: #ffffff;
            color: #000000;
            margin: 20px auto;
            border-radius: 10px;
            box-shadow: 0 6px 12px 0 rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        .header {
            height: 80px;
            width: 100%;
            background-image: linear-gradient(to right, #007bff, #0056b3);
            border-bottom: 5px solid #0056b3;
            padding: 10px;
            box-sizing: border-box;
            color: #ffffff;
            text-align: center;
        }

        .header h3 {
            color: #ffffff;
            font-size: 24px;
            font-weight: 600;
            margin: 5px 0;
        }

        .body {
            padding: 15px;
            background-color: #f9f9f9;
            color: #000000;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .input-group {
            display: flex;
            align-items: center;
        }

        .form-control {
            background-color: #ffffff;
            color: #000000;
            border: 1px solid #ccc;
            border-radius: 4px;
            padding: 8px;
            box-sizing: border-box;
            flex: 1;
        }

        .input-group-text {
            background-color: transparent;
            border: none;
            cursor: pointer;
            padding: 0 10px;
        }

        .btn-primary {
            background-color: #007bff;
            border: 1px solid #007bff;
            color: #ffffff;
            border-radius: 4px;
            padding: 8px 15px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: background-color .3s ease, border-color .3s ease;
            display: inline-block;
            text-align: center;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

        .btn-secondary {
            background-color: #6c757d;
            border: 1px solid #6c757d;
            color: #ffffff;
            border-radius: 4px;
            padding: 8px 15px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: background-color .3s ease, border-color .3s ease;
            display: inline-block;
            text-align: center;
        }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const togglePassword = document.getElementById('togglePassword');

            if (togglePassword) { // Check if element exists before adding event listener
                togglePassword.addEventListener('click', function() {
                    const passwordField = document.getElementById('inputPassword');
                    const icon = this.querySelector('i');

                    // Toggle password visibility
                    if (passwordField.type === 'password') {
                        passwordField.type = 'text';
                        icon.classList.remove('bi-eye');
                        icon.classList.add('bi-eye-slash');
                        this.setAttribute('data-show', 'true');
                    } else {
                        passwordField.type = 'password';
                        icon.classList.remove('bi-eye-slash');
                        icon.classList.add('bi-eye');
                        this.setAttribute('data-show', 'false');
                    }
                });
            }
        });
    </script>
{% endblock %}
