{# templates/search_results.html.twig #}
{% extends 'base.panel.html.twig' %}

{% block title %}Search Results{% endblock %}

{% block body %}
    <div class="container-fluid">
        {% if results is not empty %}
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title">Search Results</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <table class="table table-striped table-hover">
                        <thead class="thead-light">
                        <tr>
                            <th>ID</th>
                            <th>Project Name</th>
                            <th>Owner</th>
                            <th>IP</th>
                            <th>Created At</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for userActiv in results %}
                            <tr>
                                <td>{{ userActiv.id }}</td>
                                <td>
                                    <a href="{{ path('app_project_show', {'id': userActiv.id}) }}" class="text-primary">{{ userActiv.projectName }}</a>
                                </td>
                                <td>{{ userActiv.owner }}</td>
                                <td>{{ userActiv.ip }}</td>
                                <td>{{ userActiv.createdAt|date('Y-m-d H:i') }}</td>
                                <td>
                                    <a href="{{ path('app_project_show', {'id': userActiv.id}) }}" class="btn btn-info btn-sm rounded-pill">View</a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        {% else %}
            <div class="alert alert-warning" role="alert">
                No results found
            </div>
        {% endif %}
    </div>
{% endblock %}
